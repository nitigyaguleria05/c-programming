#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main(void) {
    int n;
    if (scanf("%d", &n) != 1) return 0;

    unsigned long long fact = 1ULL;
    unsigned long long sum = 0ULL;

    for (int i = 1; i <= n; ++i) {
        fact *= (unsigned long long)i;
        sum += fact;
    }

    printf("%llu\n", sum);
    return 0;
}
