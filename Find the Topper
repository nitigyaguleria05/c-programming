#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

struct Marks {
    int math;
    int science;
    int english;
    int computer;
};

struct Student {
    int roll;
    char name[51];
    struct Marks marks;
};

int main() {
    int N;
    if (scanf("%d", &N) != 1) return 0;

    int topRoll = 0;
    char topName[51] = "";
    int topTotal = -1;

    for (int i = 0; i < N; ++i) {
        struct Student s;
        if (scanf("%d", &s.roll) != 1) return 0;
        if (scanf("%50s", s.name) != 1) return 0;
        if (scanf("%d", &s.marks.math) != 1) return 0;
        if (scanf("%d", &s.marks.science) != 1) return 0;
        if (scanf("%d", &s.marks.english) != 1) return 0;
        if (scanf("%d", &s.marks.computer) != 1) return 0;

        int total = s.marks.math + s.marks.science + s.marks.english + s.marks.computer;

        /* If tie, choose the one who appears last -> use >= */
        if (total >= topTotal) {
            topTotal = total;
            topRoll = s.roll;
            for (int k = 0; k < 51; ++k) topName[k] = s.name[k];
        }
    }

    printf("Topper Details:\n");
    printf("Roll No: %d\n", topRoll);
    printf("Name: %s\n", topName);
    printf("Total Marks: %d", topTotal);

    return 0;
}   
