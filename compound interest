#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int P, T;
    float R;

    // Read inputs
    scanf("%d", &P);   // Principal amount
    scanf("%f", &R);   // Rate of interest in %
    scanf("%d", &T);   // Time in years

    // Compound Interest formula: CI = P * ((1 + R/100)^T - 1)
    double CI = P * (pow((1 + R / 100), T) - 1);

    // Print result rounded to 2 decimal places
    printf("%.2f\n", CI);

    return 0;
}
