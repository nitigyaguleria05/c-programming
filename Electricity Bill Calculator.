#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int U;
    float bill = 0.0;
    float total;

    scanf("%d", &U);
    if (U <= 50) {
        bill = U * 0.50;
    } else if (U <= 150) {
        bill = (50 * 0.50) + ((U - 50) * 0.75);
    } else if (U <= 250) {
        bill = (50 * 0.50) + (100 * 0.75) + ((U - 150) * 1.20);
    } else {
        bill = (50 * 0.50) + (100 * 0.75) + (100 * 1.20) + ((U - 250) * 1.50);
    }

    total = bill + (0.20 * bill);

    printf("%.2f\n", total);

    return 0;
}
