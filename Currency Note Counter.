#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int N;
    scanf("%d", &N);

    int notes[] = {500, 100, 50, 20, 10, 5, 2, 1};
    int count[8] = {0};

    for (int i = 0; i < 8; i++) {
        count[i] = N / notes[i];  
        N = N % notes[i];          
    }

    printf("500: %d\n", count[0]);
    printf("100: %d\n", count[1]);
    printf("50: %d\n", count[2]);
    printf("20: %d\n", count[3]);
    printf("10: %d\n", count[4]);
    printf("5: %d\n", count[5]);
    printf("2: %d\n", count[6]);
    printf("1: %d\n", count[7]);

    return 0;
}
