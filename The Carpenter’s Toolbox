#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

struct Rectangle {
    int length;
    int width;
};

int getArea(struct Rectangle r) {
    return r.length * r.width;
}

int getPerimeter(struct Rectangle r) {
    return 2 * (r.length + r.width);
}

int main() {
    struct Rectangle r;

    scanf("%d", &r.length);
    scanf("%d", &r.width);

    printf("Area: %d\n", getArea(r));
    printf("Perimeter: %d", getPerimeter(r));

    return 0;
}
