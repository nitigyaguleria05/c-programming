#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    long long N;
    if (scanf("%lld", &N) != 1) return 0;

    unsigned long long x = (N < 0)
        ? (unsigned long long)(-(N + 1)) + 1
        : (unsigned long long)N;

    int sum = 0;
    while (x > 0) {
        sum += x % 10;
        x /= 10;
    }

    printf("%d\n", sum);
    return 0;
}
