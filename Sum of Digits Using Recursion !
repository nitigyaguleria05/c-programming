#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int sumOfDigits(int num) {
    if (num == 0) return 0;
    return (num % 10) + sumOfDigits(num / 10);
}

int main(void) {
    int num;
    if (scanf("%d", &num) != 1) return 0;
    if (num < 0) num = -num; /* handle negative just in case */
    printf("%d\n", sumOfDigits(num));
    return 0;
}
